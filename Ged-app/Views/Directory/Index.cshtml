@model IEnumerable<Ged_app.Models.directory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid g-5">
    <div class="row mb-3">
        <h2>Directories</h2>
    </div>


    <div class="row mb-5">
        <div class="col-3">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" >
                New Directory
            </button>
        </div>
    </div>
    

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card d-flex flex-row align-items-start p-4">
                    <img src="~/Content/assets/images/directory.png" alt="directory image" width="100" class="mx-2"/>

                    <div class="d-flex flex-column align-items-start w-100 p-3">
                        <div class="d-flex align-items-center w-100 justify-content-between">
                            <h3>@Html.DisplayFor(modelItem => item.DirectoryName)</h3>
                            <a class="btn btn-default waves-effect" data-toggle="tooltip" data-placement="top" title="" href="#default" role="button" data-original-title=".btn-default">
                                Open
                            </a>
                        </div>

                        <div class="d-flex">
                            <div><i class="ti-files"></i> &ensp; @Html.DisplayFor(modelItem => item.files.Count)</div>
                            <div class="mx-5"><i class="ti-folder"></i> &ensp; @Html.DisplayFor(modelItem => item.directory1.Count)</div>
                        </div>

                        <div class="d-flex justify-content-end w-100 mt-5">
                            <button type="button" class="btn btn-primary btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Edit" data-original-title=".icofont-home ">
                                <i class="ti-pencil"></i>
                            </button>
                            <a href='@Url.Action("Delete", "Directory", new { idDirectory = item.idDirectory })' class="btn btn-success btn-icon waves-effect waves-light mx-3" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title=".icofont-search-alt-2">
                                <i class="ti-trash"></i>
                            </a>
                        
                            <button type="button" class="btn btn-warning btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Archive" data-original-title=".icofont-bubble-right">
                                <i class="ti-archive"></i>
                            </button>
                            <button type="button" class="btn btn-info btn-icon waves-effect waves-light mx-3" data-toggle="tooltip" data-placement="top" title="Lock" data-original-title=".icofont-bubble-left">
                                <i class="ti-lock"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>




